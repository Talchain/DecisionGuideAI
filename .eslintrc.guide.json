{
  "extends": "./.eslintrc.cjs",
  "overrides": [
    {
      "files": ["src/pages/sandbox-copilot/**/*.{ts,tsx}"],
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "patterns": [
              {
                "group": ["**/pages/sandbox/**", "!**/pages/sandbox-copilot/**"],
                "message": "‚ùå SAFETY VIOLATION: Copilot variant must not import from existing sandbox pages. Import from @/services, @/stores, or @/components/shared only."
              }
            ]
          }
        ],
        "@typescript-eslint/no-explicit-any": "error",
        "@typescript-eslint/explicit-function-return-type": "warn",
        "@typescript-eslint/strict-boolean-expressions": "off"
      }
    }
  ]
}
