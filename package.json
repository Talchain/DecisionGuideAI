{
  "name": "decision-mind",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=20 <21"
  },
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "vite --port 5176 --strictPort",
    "build": "tsc && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test:connection": "node --loader ts-node/esm src/lib/test-connection.ts",
    "test": "vitest run --reporter=verbose",
    "test:unit": "vitest run",
    "test:e2e:chromium": "playwright test --project=chromium -c playwright.config.ts",
    "e2e:report": "playwright show-report",
    "e2e": "playwright test",
    "typecheck": "tsc -p tsconfig.ci.json --noEmit",
    "poc:start": "./tools/poc-start.sh",
    "poc:stop": "docker compose --profile poc down",
    "poc:logs": "docker compose --profile poc logs -f",
    "poc:status": "docker compose --profile poc ps",
    "integration:check": "tsx integration/integration-check.ts",
    "evidence:share-cap": "node tools/gen-share-cap-evidence.mjs",
    "evidence:ui-pack": "node tools/gen-ui-evidence-pack.mjs",
    "evidence:a11y": "playwright test e2e/a11y-quick.spec.ts --project=chromium -c playwright.config.ts",
    "evidence:all": "npm run evidence:share-cap && npm run evidence:ui-pack",
    "ci:scan-dist": "sh -c \"if grep -R -n -E '__E2E|\\\\?e2e=' dist; then echo 'Found runtime E2E toggles in dist'; exit 1; else echo 'OK: no runtime E2E toggles'; fi\""
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/modifiers": "^7.0.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@supabase/supabase-js": "^2.39.7",
    "date-fns": "^3.3.1",
    "dotenv": "^16.5.0",
    "lucide-react": "^0.344.0",
    "openai": "^4.28.0",
    "pako": "^2.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.22.3",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.2",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/react": "^14.3.1",
    "@types/pako": "^2.0.4",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^9.0.8",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.35",
    "react-is": "^18.3.1",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "vite": "^5.4.2",
    "vitest": "^1.6.0"
  }
}
