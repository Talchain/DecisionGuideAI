{
  "name": "decision-mind",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=20 <21"
  },
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "vite --host --port 5174",
    "dev:poc": "cross-env VITE_POC_ONLY=1 VITE_AUTH_MODE=guest VITE_EDGE_GATEWAY_URL=http://127.0.0.1:4311 VITE_FEATURE_SCENARIO_SANDBOX=1 VITE_FEATURE_SSE=1 VITE_SUPABASE_URL=http://localhost/dummy VITE_SUPABASE_ANON_KEY=dummy vite --host --port 5174",
    "build": "vite build",
    "build:poc": "cross-env VITE_POC_ONLY=1 VITE_AUTH_MODE=guest vite build",
    "lint": "npx eslint .",
    "preview": "vite preview",
    "test:connection": "node --loader ts-node/esm src/lib/test-connection.ts",
    "test": "vitest run --reporter=verbose",
    "test:unit": "vitest run",
    "test:e2e:chromium": "playwright test --project=chromium -c playwright.config.ts",
    "e2e:report": "playwright show-report",
    "e2e": "playwright test",
    "typecheck": "tsc -p tsconfig.ci.json --noEmit",
    "poc:start": "./tools/poc-start.sh",
    "poc:stop": "docker compose --profile poc down",
    "poc:logs": "docker compose --profile poc logs -f",
    "integration:check": "tsx integration/integration-check.ts",
    "evidence:share-cap": "node tools/gen-share-cap-evidence.mjs",
    "evidence:ui-pack": "node tools/gen-ui-evidence-pack.mjs",
    "evidence:a11y": "playwright test e2e/a11y-vendored.spec.ts --project=chromium -c playwright.config.ts",
    "evidence:unified": "node tools/gen-unified-evidence.mjs",
    "evidence:ui": "node tools/gen-ui-evidence-pack.mjs",
    "evidence:compose": "node tools/unified-pack/compose.mjs --ui-pack docs/evidence/ui-pack --engine-in docs/evidence/incoming/engine --claude-in docs/evidence/incoming/claude --out docs/evidence/unified --print",
    "evidence:all": "npm run evidence:share-cap && npm run evidence:ui-pack",
    "ci:scan-dist": "sh -c \"if grep -R -n -E '__E2E|\\?e2e=' dist; then echo 'Found runtime E2E toggles in dist'; exit 1; else echo 'OK: no runtime E2E toggles'; fi\"",
    "ci:no-console": "sh -c \"if (grep -R -n -E --exclude='*.map' --exclude='dist/assets/vendor-*.js' --exclude='dist/assets/auth-*.js' 'console\\.[A-Za-z]+\\(' dist || grep -R -n -E --exclude='*.map' '(^|[^A-Za-z])debugger(;|$)' dist); then echo 'Found console or debugger in production build'; exit 1; else echo 'OK: no console/debugger in dist'; fi\"",
    "ci:guard:sandbox": "node tools/ci-guards/check-gotosandbox.mjs",
    "ci:guard:flags": "node tools/ci-guards/check-flags-drift.mjs",
    "test:e2e:firefox": "playwright test --project=firefox -c playwright.config.ts",
    "test:e2e:webkit": "playwright test --project=webkit -c playwright.config.ts"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/modifiers": "^7.0.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@floating-ui/react": "0.26.9",
    "@supabase/supabase-js": "2.39.7",
    "date-fns": "2.30.0",
    "dotenv": "^16.5.0",
    "lucide-react": "^0.344.0",
    "openai": "^4.28.0",
    "pako": "^2.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.22.3",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@playwright/test": "^1.47.2",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/react": "^14.3.1",
    "@types/pako": "^2.0.4",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "8.6.0",
    "@typescript-eslint/parser": "8.6.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "cross-env": "^7.0.3",
    "eslint": "9.10.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-react": "7.35.0",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.35",
    "react-is": "^18.3.1",
    "tailwindcss": "^3.4.1",
    "terser": "5.31.6",
    "ts-api-utils": "1.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "vite": "^5.4.2",
    "vitest": "^1.6.0"
  }
}
