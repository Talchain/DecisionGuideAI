# Scenario Sandbox PoC Environment Configuration
# Copy this file to .env.poc and adjust values as needed

# === CORE SERVICE CONFIGURATION ===
NODE_ENV=pilot
LOG_LEVEL=info

# Gateway Service
GATEWAY_PORT=3001
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Engine Service
ENGINE_PORT=3002
JOBS_PORT=3003

# === SAFETY DEFAULTS (Keep OFF for pilot) ===
ENABLE_RATE_LIMITING=false
ENABLE_CACHE=false
ENABLE_USAGE_TRACKING=false
ENABLE_MONITORING=false
ENABLE_SECRET_HYGIENE_BLOCKING=false
ENABLE_SLOS=false

# === SIMULATION MODE ===
USE_MOCK_DATA=true
USE_SIMULATION=true
ENABLE_SEED_ECHO=true
DEFAULT_SEED=42
ENABLE_DETERMINISTIC_REPLAY=true

# === QUOTAS AND LIMITS ===
QUOTA_PER_RUN=1000
QUOTA_PER_MINUTE=60
MAX_TOKENS_PER_RUN=1000
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT_MS=300000

# === KILL SWITCHES ===
GLOBAL_KILL_SWITCH=false

# === OBSERVABILITY (Optional) ===
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=pilot123

# === DEMO CONFIGURATION ===
DEMO_SCENARIO_ID=pilot_demo
DEMO_SEED=42
TTFF_TARGET_MS=500
CANCEL_TARGET_MS=150
COMPARISON_TARGET_S=600

# === SECURITY ===
# No API keys or secrets should be set in pilot mode
# All authentication disabled for demo purposes